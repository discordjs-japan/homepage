---
interface Props {
  class?: string
}
---

<div class:list={['flex flex-col rounded-md bg-slate-800', Astro.props.class]}>
  <div class="flex items-center space-x-2 px-4 py-2">
    <div class="h-3 w-3 rounded-full bg-red-500 hover:bg-opacity-80"></div>
    <div class="h-3 w-3 rounded-full bg-yellow-500 hover:bg-opacity-80"></div>
    <div class="h-3 w-3 rounded-full bg-green-500 hover:bg-opacity-80"></div>
  </div>
  <div class="max-w-full px-1 pb-1 text-slate-100">
    <slot />
  </div>
</div>
