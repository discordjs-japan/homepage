{
  "name": "@discordjs-japan/homepage",
  "private": true,
  "description": "discordjs-japan.orgのソースコード",
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "postinstall": "remix setup cloudflare",
    "prepare": "node ./scripts/prepare.js",
    "start": "cross-env NODE_ENV=production npm run dev:wrangler",
    "format": "prettier --write . && eslint ./app --fix",
    "format:check": "prettier --check . && eslint ./app",
    "generate:css": "tailwindcss -m -i ./styles/app.css -o ./app/styles/tailwind.css",
    "build": "npm run build:css && npm run build:remix",
    "build:remix": "remix build",
    "build:css": "npm run generate:css -- --minify",
    "dev": "run-p build:* && run-p dev:*",
    "dev:remix": "remix watch",
    "dev:wrangler": "cross-env NODE_ENV=development wrangler pages dev ./public",
    "dev:css": "npm run generate:css -- --watch"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.1.1",
    "@fortawesome/free-brands-svg-icons": "^6.1.1",
    "@fortawesome/react-fontawesome": "^0.1.18",
    "@remix-run/cloudflare-pages": "^1.3.4",
    "@remix-run/react": "^1.3.4",
    "clsx": "^1.1.1",
    "cross-env": "^7.0.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.3.5"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.4.0",
    "@remix-run/dev": "^1.3.5",
    "@remix-run/eslint-config": "^1.3.5",
    "autoprefixer": "^10.4.4",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.12",
    "prettier": "^2.6.2",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "tailwindcss": "^3.0.23",
    "wrangler": "beta"
  },
  "volta": {
    "node": "16.14.2"
  }
}
